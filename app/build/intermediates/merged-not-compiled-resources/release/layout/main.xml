<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:nestedScrollingEnabled="true"
    android:scrollbars="none"
    xmlns:ads="http://schemas.android.com/apk/res-auto"

    tools:context=".Homepage.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/councilling_logo"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/activity_recycle"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center" />

    <!-- <android.support.v7.widget.CardView
            android:id="@+id/card3"
            android:layout_width="match_parent"
            android:layout_height="70dp"

            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card2">

            <TextView
                android:layout_width="389dp"
                android:layout_height="68dp"
                android:gravity="center"
                android:text="ICET"
                android:textColor="@color/colorPrimary"
                android:textSize="25dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@drawable/ic_chevron_right_black_24dp" />
        </android.support.v7.widget.CardView> -->

        <com.google.android.gms.ads.AdView
            android:id="@+id/adViewEamcet"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_id_home_page">
        </com.google.android.gms.ads.AdView>
    <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:stretchColumns="*"
                    android:shrinkColumns="*">

                    <TableRow>
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card6"
                        android:clickable="true"
                        style="@style/Mainactivity"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:layout_width="wrap_content"
                        android:layout_height="90dp"
                        app:strokeColor="@color/black_overlay"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="@dimen/mainPageLogowidth"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/mainPagelogoHeight"
                            app:srcCompat="@drawable/ic_people_outline_black_24dp" />
                    </com.google.android.material.card.MaterialCardView>



                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card7"
                        android:clickable="true"
                        style="@style/Mainactivity"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackground"

                        android:layout_width="wrap_content"
                        android:layout_height="90dp"

                        app:strokeColor="@color/black_overlay"
                        app:strokeWidth="1dp">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/mainPageLogowidth"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/mainPagelogoHeight"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_share_black_24dp" />
                    </com.google.android.material.card.MaterialCardView>
                    </TableRow>

                    <TableRow>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card8"
                            android:clickable="true"
                            style="@style/Mainactivity"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:layout_width="wrap_content"
                            android:layout_height="91dp"
                            app:strokeColor="@color/black_overlay"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="@dimen/mainPageLogowidth"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/mainPagelogoHeight"
                                app:srcCompat="@drawable/ic_websites_black_24dp" />
                        </com.google.android.material.card.MaterialCardView>

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/card9"
                            android:clickable="true"
                            style="@style/Mainactivity"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"

                            android:layout_width="wrap_content"
                            android:layout_height="90dp"
                            app:strokeColor="@color/black_overlay"
                            app:strokeWidth="1dp">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="@dimen/mainPageLogowidth"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/mainPagelogoHeight"
                                app:srcCompat="@drawable/ic_feedback_black_24dp" />
                        </com.google.android.material.card.MaterialCardView>

                    </TableRow>


                </TableLayout>


    </LinearLayout>
</ScrollView>